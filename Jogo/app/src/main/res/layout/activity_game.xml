<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_jogador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="32dp"
        android:textColor="#000000"
        android:text="Jogador 1"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_placarJogador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_jogador1"
        app:layout_constraintLeft_toLeftOf="@+id/txt_jogador1"
        app:layout_constraintRight_toRightOf="@+id/txt_jogador1"/>

    <TextView
        android:id="@+id/txt_jogador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="264dp"
        android:layout_marginTop="32dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Jogador 2"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_placarJogador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_jogador2"
        app:layout_constraintLeft_toLeftOf="@+id/txt_jogador2"
        app:layout_constraintRight_toRightOf="@+id/txt_jogador2"/>

    <TextView
        android:id="@+id/txt_statusJogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status do Jogo"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_placarJogador1"
        tools:layout_editor_absoluteX="-26dp" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#000000"

        android:textColor="#FFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_statusJogo"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginLeft="3dp"
        android:backgroundTint="#000000"

        android:textColor="#FFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_0"
        app:layout_constraintTop_toTopOf="@+id/btn_0" />
    <Button
        android:id="@+id/btn_2"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginLeft="3dp"
        android:backgroundTint="#000000"

        android:textColor="#FFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_1"
        app:layout_constraintTop_toTopOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_0"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginLeft="3dp"
        android:backgroundTint="#000000"

        android:textColor="#FFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_3"
        app:layout_constraintTop_toTopOf="@+id/btn_3" />
    <Button
        android:id="@+id/btn_5"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginLeft="3dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_4"
        app:layout_constraintTop_toTopOf="@+id/btn_4" />


    <Button
        android:id="@+id/btn_6"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"/>

    <Button
        android:id="@+id/btn_7"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginLeft="3dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_6"
        app:layout_constraintTop_toTopOf="@+id/btn_6" />
    <Button
        android:id="@+id/btn_8"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginLeft="3dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_7"
        app:layout_constraintTop_toTopOf="@+id/btn_7" />

<Button
    android:id="@+id/btn_reiniciarJogo"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="Reiniciar o Jogo"
    android:textColor="#FFFF"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintTop_toBottomOf="@+id/btn_6"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>